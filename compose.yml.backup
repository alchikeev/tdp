# compose.yml - Продакшн конфигурация для VPS
name: tdp

services:
  tdp-web:                # Явное имя сервиса
    container_name: tdp-web
    build: .
    # Для использования готового образа раскомментируй:
    # image: ghcr.io/adilet/tdp:latest
    env_file:
      - .env
    environment:
      - DJANGO_SETTINGS_MODULE=config.settings.prod
    working_dir: /app
    volumes:
      - /srv/tdp-static:/app/staticfiles
      - /srv/tdp-data/media:/app/media
      - /srv/tdp-data/data:/app/data
    networks:
      - web
    restart: unless-stopped
    ports:
      - "8001:8000"
    healthcheck:
      test: ["CMD-SHELL", "wget -qO- http://localhost:8000/health/ || exit 1"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 40s

  caddy:                  # Caddy для раздачи статики и медиа
    container_name: tdp-caddy
    image: caddy:2-alpine
    volumes:
      - ./tdp.caddy:/etc/caddy/Caddyfile
      - /srv/tdp-data:/srv/tdp-data:ro  # Медиа файлы
      - /srv/tdp-static:/srv/tdp-static:ro  # Статические файлы
      - caddy_data:/data
      - caddy_config:/config
    networks:
      - web
    restart: unless-stopped
    ports:
      - "80:80"
      - "443:443"

volumes:
  caddy_data:
    driver: local
  caddy_config:
    driver: local

networks:
  web:
